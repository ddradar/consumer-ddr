{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://cs.ddradar.app/song-schema.json",
  "definitions": {
    "id": {
      "type": "string",
      "pattern": "^([0-9a-z]+-)*[0-9a-z]+$"
    },
    "chart": {
      "type": "object",
      "properties": {
        "playStyle": {
          "type": "string",
          "enum": [
            "SINGLE",
            "DOUBLE",
            "COUPLE",
            "UNISON",
            "6-PANELS",
            "3-PANELS",
            "STEP BATTLE",
            "BATTLE"
          ]
        },
        "difficulty": {
          "description": "Chart difficulty type.",
          "type": "integer",
          "minimum": 0
        },
        "level": {
          "description": "Chart level. (if blinked 10, set \"10+\")",
          "type": ["number", "string"],
          "minimum": 0,
          "pattern": "^([0-9]+\\+|\\?)$",
          "default": 0,
          "examples": [3, "10+", 18, "?"]
        }
      },
      "required": ["playStyle", "difficulty", "level"],
      "additionalProperties": false
    }
  },
  "title": "Song Schema",
  "type": "object",
  "properties": {
    "$schema": { "type": "string" },
    "slug": {
      "$ref": "#/definitions/id",
      "description": "Song Id"
    },
    "series": {
      "$ref": "#/definitions/id",
      "description": "Series slug"
    },
    "name": { "type": "string" },
    "artist": { "type": "string" },
    "bpm": {
      "type": ["integer", "string"],
      "exclusiveMinimum": 0,
      "pattern": "^(\\?{3}|[0-9]+-[0-9]+)$",
      "default": "???",
      "examples": [150, "100-400", "???"]
    },
    "charts": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/chart"
      },
      "minItems": 1
    }
  },
  "required": ["slug", "series", "name", "artist", "bpm", "charts"],
  "additionalProperties": false
}
