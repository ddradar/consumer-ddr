{
  "name": "consumer-ddr",
  "version": "0.5.0",
  "description": "Consumer DDR Song List",
  "author": "ddradar",
  "private": true,
  "scripts": {
    "dev": "nuxt-ts",
    "generate": "nuxt-ts generate",
    "fix": "run-p fix:*",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --ext .js,.ts,.vue --ignore-path .gitignore .",
    "lint:prettier": "prettier --ignore-path .gitignore -l \"**/*.{json,yaml,yml}\"",
    "lint:tsc": "tsc --noEmit",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ddradar/consumer-ddr.git"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --fix",
    "*.{json,yml,yaml}": "prettier --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@nuxt/typescript-runtime": "^0.4.2",
    "@nuxtjs/pwa": "^3.0.0-beta.20",
    "buefy": "^0.8.15",
    "nuxt": "^2.12.2",
    "nuxt-buefy": "^0.3.26",
    "nuxt-property-decorator": "^2.5.1"
  },
  "devDependencies": {
    "@nuxt/typescript-build": "^0.6.2",
    "@nuxtjs/eslint-config-typescript": "^1.0.2",
    "@nuxtjs/eslint-module": "^1.1.0",
    "@types/jest": "^25.2.1",
    "@types/jest-json-schema": "^2.1.2",
    "@vue/test-utils": "^1.0.0-beta.32",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-nuxt": ">=0.5.2",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-simple-import-sort": "^5.0.2",
    "husky": "^4.2.3",
    "jest": "^24.9.0",
    "jest-json-schema": "^2.1.0",
    "jest-serializer-vue": "^2.0.2",
    "lint-staged": "^10.1.1",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.2",
    "sass-loader": "^8.0.2",
    "ts-jest": "^25.3.1",
    "vue-jest": "^4.0.0-0"
  }
}
